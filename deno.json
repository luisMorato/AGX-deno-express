{
  "tasks": {
    "dev": "deno run --watch -A --env-file server.ts",
    "scripts": "deno run -A --sloppy-imports scripts.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "@types/express": "npm:@types/express@^5.0.3",
    "@types/jsonwebtoken": "npm:@types/jsonwebtoken@^9.0.10",
    "@types/swagger-ui-express": "npm:@types/swagger-ui-express@^4.1.8",
    "bcryptjs": "npm:bcryptjs@^3.0.2",
    "cors": "npm:cors@^2.8.5",
    "enquirer": "npm:enquirer@^2.4.1",
    "express": "npm:express@^5.1.0",
    "jsonwebtoken": "npm:jsonwebtoken@^9.0.2",
    "mongoose": "npm:mongoose@^8.19.1",
    "swagger-jsdoc": "npm:swagger-jsdoc@^6.2.8",
    "swagger-ui-express": "npm:swagger-ui-express@^5.0.1",
    "zod": "npm:zod@^4.1.12"
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ],
      "exclude": [
        "no-namespace",
        "no-debugger",
        "no-explicit-any"
      ]
    }
  },
  "fmt": {
    "include": [
      "**/*.ts",
      "**/*.js",
      "**/*.json"
    ],
    "options": {
      "useTabs": false,
      "lineWidth": 150,
      "indentWidth": 2,
      "singleQuote": true,
      "semiColons": false
    }
  }
}
